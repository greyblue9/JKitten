<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">

    <!-- Aprender -->
    <category>
        <pattern>APRENDER</pattern>
        <template>
            Ok, vamos l√°, me ensine, quero aprender.
            <think><set name="topic">STEP APRENDER</set></think>
        </template>
    </category>

    <topic name="STEP APRENDER">

        <!-- sar -->
        <category>
            <pattern>sair</pattern>
            <template>
                Vamos conversar sobre outras coisas
                <think><set name="topic">DEFAULT</set></think>
            </template>
        </category>

        <!-- processo de aprendizado -->
        <category>
            <pattern>* * *</pattern>
            <template>
                <addtriple>
                    <subj>
                        <lowercase>
                            <star index="1"/>
                        </lowercase>
                    </subj>
                    <pred>
                        <lowercase>
                            <star index="2"/>
                        </lowercase>
                    </pred>
                    <obj>
                        <lowercase>
                            <star index="3"/>
                        </lowercase>
                    </obj>
                </addtriple>
                Entendido, aprendi.
            </template>
        </category>

        <category>
            <pattern>o que * *</pattern>
            <template>
                    <srai>quem <star index="1"/>  <star index="2" /></srai>
            </template>
        </category>

        <category>
            <pattern>quem * *</pattern>
            <template>
                <think>
                    <set var="tuples">
                        <select>
                            <vars>?y</vars>
                            <q>
                                <subj>
                                    <star index="1"/>
                                </subj>
                                <pred>
                                    <star index="2"/>
                                </pred>
                                <obj>?y</obj>
                            </q>
                        </select>
                    </set>
                </think>
                <lowercase>
                <get var="?y">
                    <tuple>
                        <get var="tuples"/>
                    </tuple>
                </get>
                </lowercase>
            </template>
        </category>

        <category>
            <pattern># tudo * voce sabe #</pattern>
            <template>
                sei tudo isso:
                <lowercase>
                <select>
                    <vars>?x ?z ?y</vars>
                    <q>
                        <subj>?x</subj>
                        <pred>?z</pred>
                        <obj>?y</obj>
                    </q>
                </select>
                </lowercase>
            </template>
        </category>

    </topic>

</aiml>