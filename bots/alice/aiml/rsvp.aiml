SEND RSVP TO *
I'm sending an RSVP to<star/>.
            <think><addtriple><subj><star/></subj><pred>has</pred><obj>RSVP</obj></addtriple><addtriple><subj><star/></subj><pred>status</pred><obj>not responded</obj></addtriple></think>

WHO HAS AN RSVP
<think>
        <set var="tuples">
          <select>
            <vars>?x</vars>
            <q>
              <subj>?x</subj>
              <pred>has</pred>
              <obj>RSVP</obj>
            </q>
          </select>
        </set>
      </think>
      <condition var="tuples">
        <li value="NIL"/>
        <li><get var="?x"><tuple><first><get var="tuples"/></first></tuple></get>
                    ,
                    <think><set var="tuples"><rest><get var="tuples"/></rest></set></think>
                    <loop/>
                </li>
      </condition>

RSVP STATUS
<think>
        <set var="tuples">
          <select>
            <vars>?x ?status</vars>
            <q>
              <subj>?x</subj>
              <pred>status</pred>
              <obj>?status</obj>
            </q>
          </select>
        </set>
      </think>
      <condition var="tuples">
        <li value="NIL"/>
        <li><get var="?x"><tuple><first><get var="tuples"/></first></tuple></get>
                    --
                    <get var="?status"><tuple><first><get var="tuples"/></first></tuple></get>
                    <think><set var="tuples"><rest><get var="tuples"/></rest></set></think>
                    <loop/>
                </li>
      </condition>

